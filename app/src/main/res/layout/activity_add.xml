<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add"
    android:orientation="vertical"
    android:id="@+id/AddRelative">

    <RelativeLayout
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/post2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="90dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            app:backgroundTint="@color/colorPrimaryDark"
            app:rippleColor="@android:color/white"
            app:srcCompat="@drawable/ic_menu_send"
            tools:ignore="VectorDrawableCompat" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="0dp"
            app:backgroundTint="@color/colorPrimaryDark"
            app:rippleColor="@android:color/white"
            app:srcCompat="@drawable/ic_close_black_24dp"
            tools:ignore="VectorDrawableCompat" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/post3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_toStartOf="@+id/post2"
            android:layout_toLeftOf="@+id/post2"
            app:backgroundTint="@color/colorPrimaryDark"
            app:rippleColor="@android:color/white"
            app:srcCompat="@drawable/ic_settings_black_24dp"
            tools:ignore="VectorDrawableCompat" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/post4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_toStartOf="@+id/post3"
            android:layout_toLeftOf="@+id/post3"
            app:backgroundTint="@color/colorPrimaryDark"
            app:rippleColor="@android:color/white"
            app:srcCompat="@drawable/ic_color_lens_black_24dp"
            tools:ignore="VectorDrawableCompat" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="105dp"
            android:background="@color/transparent"
            android:fontFamily="serif-monospace"
            android:hint="Title"
            android:padding="5dp"
            android:textSize="20sp"
            android:id="@+id/thingsHeader"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:fontFamily="serif-monospace"
            android:hint="Please start to write."
            android:padding="5dp"
            android:textSize="20sp"
            android:id="@+id/things"/>
    </LinearLayout>
</RelativeLayout>